<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"

    android:layout_marginBottom="10dp"
    android:foreground="?attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/view1"
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textLayout"
            android:layout_alignTop="@+id/textLayout"
            android:background="@color/red" />

        <RelativeLayout
            android:id="@+id/textLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/imgLayout"
            android:layout_toRightOf="@+id/view1"
            android:padding="10dp">

            <TextView
                android:id="@+id/tvProjectNameTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="left|center_vertical"
                android:text="User Name :-"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/medium_text" />

            <TextView
                android:id="@+id/txt_asset_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"

                android:layout_toRightOf="@+id/tvProjectNameTitle"
                android:gravity="left|center_vertical"
                android:singleLine="true"
                android:text="Food/Snacks"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/medium_text" />

            <TextView
                android:id="@+id/tvProjectDateTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvProjectNameTitle"
                android:layout_marginTop="5dp"
                android:gravity="left|center_vertical"
                android:text="Stock Code :-"
                android:textColor="@color/medium_grey"
                android:textSize="@dimen/medium_text" />

            <TextView
                android:id="@+id/txt_asset_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_asset_name"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/tvProjectDateTitle"
                android:gravity="left|center_vertical"
                android:singleLine="true"
                android:text="11/09/1992"
                android:textColor="@color/medium_grey"
                android:textSize="@dimen/medium_text" />

            <TextView
                android:id="@+id/tvNoOfPeopleTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvProjectDateTitle"
                android:layout_marginTop="5dp"
                android:gravity="left|center_vertical"
                android:text="Date :-"
                android:textColor="@color/medium_grey"
                android:textSize="@dimen/medium_text" />

            <TextView
                android:id="@+id/txt_asset_issue_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_asset_id"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/tvNoOfPeopleTitle"
                android:gravity="left|center_vertical"
                android:singleLine="true"
                android:text="Requested"
                android:textColor="@color/medium_grey"
                android:textSize="@dimen/medium_text" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/imgLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgEdit"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_form" />

            <ImageView
                android:id="@+id/imgDelete"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/form_delete" />
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>